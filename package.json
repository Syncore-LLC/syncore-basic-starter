{
  "name": "syncore-basic-starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.1.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^2.0.3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production postcss ./css/tailwind.css -o ./css/build.css",
    "dev": "tailwindcss build ./css/tailwind.css -o ./css/build.css && live-server",
    "tw": "tailwindcss build ./css/tailwind.css -o ./css/build.css"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",

    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",

    "live-server": "^1.2.1",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
